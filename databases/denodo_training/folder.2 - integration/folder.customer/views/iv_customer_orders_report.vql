CREATE OR REPLACE VIEW iv_customer_orders_report FOLDER = '/2 - integration/customer' AS SELECT iv_customer_orders.customer_code AS customer_code, iv_customer_orders.first_name AS first_name, iv_customer_orders.last_name AS last_name, iv_customer_orders.status AS status, formatdate('dd-MM-yyyy', iv_customer_orders.date_placed) AS date_placed, formatdate('dd-MM-yyyy', iv_customer_orders.date_delivered) AS date_delivered, formatdate('dd-MM-yyyy', iv_customer_orders.date_closed) AS date_closed, iv_customer_orders.order_id AS order_id, iv_customer_orders.productid AS productid, iv_customer_orders.productname AS productname FROM iv_customer_orders;

